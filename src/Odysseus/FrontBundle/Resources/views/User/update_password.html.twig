{% extends 'OdysseusFrontBundle:User:column2.html.twig' %}

{% block content_title %}MON COMPTE - MODIFICATION DU MOT DE PASSE{% endblock content_title %}

{% block column_content %}
<div class="row">
    <div class="col-xs-12">
        {% for flashMessage in app.session.flashbag.get('odysseus_front_user_update_password') %}
            <div class="flash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
    </div>
</div>
<div class="row">
    {{ 
        form_start(form, {
            'method':'POST',
            'attrs':{
                'class' : 'form-horizontal form-register'
            }
        }) 
    }}
    {{ form_errors(form) }}
    <!-- Tableau Achats/Ventes -->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top:20px">
            <div>
                <div class="form-group">
                    <label for="currentpassword" class="col-sm-3 control-label">Mot de passe actuel</label>
                    <div class="col-sm-9">
                        {{ 
                            form_widget(form.actualPassword, {
                                'attr' : {
                                    'class' : 'form-control',
                                    'placeholder' : 'Entrez votre mot de passe actuel'
                                }
                            })
                        }}
                        {{ form_errors(form.actualPassword) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="newpassword" class="col-sm-3 control-label">Nouveau mot de passe</label>
                    <div class="col-sm-9">
                        {{ 
                            form_widget(form.plainPassword.first, {
                                'attr' : {
                                    'class' : 'form-control',
                                    'placeholder' : 'Entrez le nouveau mot de passe'
                                }
                            })
                        }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="newpasswordconfirm" class="col-sm-3 control-label">Confirmer le nouveau mot de passe</label>
                    <div class="col-sm-9">
                        {{ 
                            form_widget(form.plainPassword.second, {
                                'attr' : {
                                    'class' : 'form-control',
                                    'placeholder' : 'Confirmez votre nouveau mot de passe'
                                }
                            })
                        }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                </div>
            </div>
    </div>

    <!-- Pagination -->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <button type="submit" class="btn btn-greend btn-long pull-right">Enregistrer les modifications</button>
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}