{% extends 'OdysseusFrontBundle::layout.html.twig' %}
{% block content %}
<div class="row">
    <!-- Titre de la page -->
    <div class="col-lg-12">
        <h2>Commande</h2>
    </div>
    <!-- Commande -->
    <div class="col-lg-12">
        <div class="row form-group">
            <div class="col-xs-12">
                <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                    <li class="active"><a href="#step-1">
                            <h4 class="list-group-item-heading">ARTICLE</h4>
                            <p class="list-group-item-text">Informations de l'article</p>
                        </a></li>
                    <li class="disabled"><a href="#step-2">
                            <h4 class="list-group-item-heading">MODÈLE</h4>
                            <p class="list-group-item-text">Détails de votre vente</p>
                        </a></li>
                </ul>
            </div>
        </div>
        {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
        {{ form_errors(form) }}
            <!-- ETAPE 1 -->
            <div class="row setup-content" id="step-1">
                <div class="col-lg-12">
                    <div class="titleHeader clearfix">
                        <h3>Informations de livraison</h3>
                    </div>
                    <div class="form-group">
                        <label for="article" class="col-sm-3 control-label">Nom de l'article *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.name, {
                                    'attr' : {
                                        'class' : 'form-control'
                                    },
                                    'id' : 'article',
                                    
                                })
                            }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="article-brand" class="col-sm-3 control-label">Marque de l'article *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.brand, {
                                    'attr' : {
                                        'class' : 'form-control'
                                    },
                                    'id' : 'article-brand',
                                    
                                })
                            }}
                            {{ form_errors(form.brand) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-sm-3 control-label">Description *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.description, {
                                    'attr' : {
                                        'class' : 'form-control',
                                        'rows' : 10
                                    },
                                    'id' : 'description'
                                })
                            }}
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="categorie" class="col-sm-3 control-label">Catégorie *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.category, {
                                    'attr' : {
                                        'class' : 'form-control'
                                    },
                                    'id' : 'categorie',
                                    'empty_value' : 'Selectionnez une catégorie'
                                })
                            }}
                            {{ form_errors(form.category) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="telfixe" class="col-sm-3 control-label">Images *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.models[0].image[0].file, {
                                    'attr' : {
                                        'class' : 'form-control'
                                    },
                                    'id' : 'categorie',
                                    'required' : true
                                })
                            }}
                            {{ form_errors(form.models[0].image[0]) }}
                            {{ 
                                form_widget(form.models[0].image[1].file, {
                                    'attr' : {
                                        'class' : 'form-control'
                                    },
                                    'id' : 'categorie',
                                    'required' : false
                                })
                            }}
                            {{ form_errors(form.models[0].image[0]) }}
                            {{ 
                                form_widget(form.models[0].image[2].file, {
                                    'attr' : {
                                        'class' : 'form-control'
                                    },
                                    'id' : 'categorie',
                                    'required' : false
                                })
                            }}
                            {{ form_errors(form.models[0].image[0]) }}
                            
                            <p style="font-style:italic; color: #666; margin-top:5px">(format recommandé: 700x360)</p>
                            {{ form_errors(form.models[0].image) }}
                        </div>
                    </div>
                    <button type="button" id="activate-step-2" class="btn btn-greend btn-long pull-right">Passer à l'étape suivante</button>
                </div>
            </div>
            <!-- ETAPE 2 -->
            <div class="row setup-content" id="step-2">
                <div class="col-lg-12">
                    <div class="titleHeader clearfix">
                        <h3>Détails de votre vente</h3>
                    </div>
                    <div class="form-group">
                        <label for="prix" class="col-sm-3 control-label">Prix (en €) *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.models[0].price, {
                                    'attr' : {
                                        'class' : 'form-control',
                                        'placeholder' : "Entrez le prix de l'article"
                                    },
                                    'id' : 'prix',
                                })
                            }}
                            {{ form_errors(form.models[0].price) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="poids" class="col-sm-3 control-label">Poids (en kg) *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.models[0].weight, {
                                    'attr' : {
                                        'class' : 'form-control',
                                        'placeholder' : "Entrez le poids de l'article"
                                    },
                                    'id' : 'poids',
                                })
                            }}
                            {{ form_errors(form.models[0].weight) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="longueur" class="col-sm-3 control-label">Longueur (en cm) *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.models[0].width, {
                                    'attr' : {
                                        'class' : 'form-control',
                                        'placeholder' : "Entrez la longueur de l'article"
                                    },
                                    'id' : 'longueur',
                                })
                            }}
                            {{ form_errors(form.models[0].width) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="largeur" class="col-sm-3 control-label">Largeur (en cm) *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.models[0].height, {
                                    'attr' : {
                                        'class' : 'form-control',
                                        'placeholder' : "Entrez la largeur de l'article"
                                    },
                                    'id' : 'largeur',
                                })
                            }}
                            {{ form_errors(form.models[0].height) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="epaisseur" class="col-sm-3 control-label">Epaisseur (en cm) *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.models[0].depth, {
                                    'attr' : {
                                        'class' : 'form-control',
                                        'placeholder' : "Entrez l'epaisseur de l'article"
                                    },
                                    'id' : 'epaisseur',
                                })
                            }}
                            {{ form_errors(form.models[0].depth) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="etat" class="col-sm-3 control-label">État *</label>
                        <div class="col-sm-9">
                            {{ 
                                form_widget(form.models[0].status, {
                                    'attr' : {
                                        'class' : 'form-control',
                                        'placeholder' : "Entrez l'état de l'article"
                                    },
                                    'id' : 'etat',
                                    'empty_value' : "Entrez l'état de l'article",
                                    'required' : true
                                })
                            }}
                            {{ form_errors(form.models[0].status) }}
                        </div>
                    </div>
                    <button type="submit" id="activate-step-3" class="btn btn-greend btn-long pull-right">Passer à l'étape suivante</button>
                </div>
            </div>
        {{ form_end(form) }}
        <!-- ETAPE 3 -->
        <div class="row setup-content" id="step-3">
            <div class="col-xs-12">
                <div class="col-md-12 well text-center">
                    <h1 class="text-center" style="margin:10px 0px 15px">Votre article à été ajouté !</h1>
                    <h4 class="text-center">Retrouvez tous les détails de votre article dans votre <a href="account_index.html">espace personnel</a>.</h4>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}