{% extends 'OdysseusFrontBundle::layout.html.twig' %}
{% block content %}
<div class="row">
    <!-- Titre de la page -->
    <div class="col-lg-12">
        <h2>Connexion</h2>
    </div>
    <div class="col-lg-12">
        Félicitation, <br /><br />
        
        votre inscription est validé. Vous pouvez-vous connecter à votre espace personnel via le formulaire ci-dessous.
    </div>
    
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-3">
                
            </div>
            <div class="col-lg-6">
                <div class="login-form">
                    <h3>Connexion</h3>
                    <form method="POST" action="{{ path("front_check") }}">
                        <input type="hidden" name="_csrf_token" value="" />
                        <div class="controls">
                            <div class="form-group">
                                <label for="clientmail">Votre E-mail</label> <span class="text-error">*</span></label>
                                <input name="_username" type="text" class="form-control" id="clientmail" placeholder="Entrez votre E-mail" value="" required>
                            </div>
                            <div class="form-group">
                                <label for="clientpwd">Votre Mot de passe</label> <span class="text-error">*</span></label>
                                <input name="_password" type="password" class="form-control" id="clientpwd" placeholder="Entrez votre mot de passe" required>
                            </div>
                            <label class="checkbox">
                                <input name="_remember_me" type="checkbox"> Se souvenir de moi
                            </label>
                            <div class="actions"><button type="submit" class="btn btn-greend btn-long">Se connecter</button></div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3">
                
            </div>
        </div>
    </div>
</div>
{% endblock %}