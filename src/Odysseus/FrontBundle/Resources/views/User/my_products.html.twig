{% extends 'OdysseusFrontBundle:User:column2.html.twig' %}

{% block content_title %}MON COMPTE - MES ARTICLES{% endblock content_title %}

{% block column_content %}

    <!-- Page Content -->
    <div>
        <div class="row">

            <!-- Listing de produits -->
            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                <div class="row">
                    <!-- Tableau Achats/Ventes -->
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top:20px">
                        <table class="table table-condensed table-hover orderList">
                            <thead>
                                <tr>
                                    <th>Nom de l'article</th>
                                    <th>Marque</th>
                                    <th>Catégorie</th>
                                    <th>Prix TTC</th>
                                    <th>État</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for product in products %}
                                    <tr>
                                        <td><a href="">{{product.article.name}}</a></td>
                                        <td>{{ product.article.brand }}</td>
                                        <td>{{ product.article.category.name }}</td>
                                        <td>{{ product.price }} €</td>
                                        <td>{{ product.status.name }}</td>
                                    </tr>
                                    {% else %}
                                    <td colspan="7" align="center">
                                        Aucun Article
                                    </td>
                                    {% endfor %}
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 custompager" style="text-align:left;">
                                    <a href="{{ path('odysseus_front_user_add_article_model')}}" class="btn btn-greend" style="vertical-align:top;">Ajouter / Vendre un nouvel article</a>
                                    {% if pagination is not null %}
                                        <ul class="pagination">
                                            {% if pagination.min > 1 %}
                                                <li>
                                                    <a href="{{ path('odysseus_front_user_my_orders_page', {'page' : pagination.min-1}) }}">&laquo;</a>
                                                </li>
                                            {% endif %}
                                            {% for i in pagination.min..pagination.max %}
                                                <li class="{{ pagination.page == i ? 'active' : '' }}">
                                                    <a href="{{ path('odysseus_front_user_my_orders_page', {'page' : i}) }}">{{ i }}</a>
                                                </li>
                                            {% endfor %}
                                            {% if pagination.max < pagination.total %}
                                                <li>
                                                    <a href="{{ path('odysseus_front_user_my_orders_page', {'page' : pagination.max+1}) }}">&raquo;</a>
                                                </li>
                                            {% endif %}
                                        </ul>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.page content -->

                {% endblock %}