{% extends 'OdysseusAdminBundle::column2.layout.html.twig' %}

{% block title %}Nouvelle page{% endblock %}

{% block content %}
<div class="row">
    <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
        <h1 class="page-header">{% block form_title %}{% endblock form_title %}</h1>
    </div>
</div>


<form method="post" action="somepage">
    
    <div class="form-group">
        <label for="titre">Lien : </label>
        <div>
            <span>http://www.wyden.fr/</span><input style="display:inline-block;width:auto;font-size:14px;height:16px;line-height:16px;vertical-align:middle;" value="accueil" type="text" class="form-control" id="titre" placeholder="accueil">
        </div>
    </div>
    
    <div class="form-group">
        <label for="titre">Titre : </label>
        <input type="text" class="form-control" id="titre" placeholder="Titre de la page">
    </div>
    
    <div class="form-group">
        <label for="contenu">Contenu : </label>
        <textarea class="tinymce" id="contenu" placeholder="Contenu de la page"></textarea>
    </div>
</form>
{% endblock %}

{% block operations %}
     <li class="list-group-item">
         <a href="{{ path('odysseus_admin_page') }}">Liste des pages</a>
     </li>
{% endblock operations %}