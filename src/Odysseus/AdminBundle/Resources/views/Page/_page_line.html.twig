<tr class="page-line" data-id="{{ page.id}}" data-parent="{{ page.parent is null ? '' : page.parent.id }}" data-depth="{{ indent }}">
	<td class="page-line-title nowrap">
		{% for i in 0..indent %}
		-
		{% endfor %}
		{{ page.title }}
	</td>
	<td class="page-line-content">{{ page.content|slice(0, 50) }}{{page.content|length > 50 ? '...' : '' }}</td>
	<td class="page-line-modifiedAt">{{ page.modifiedAt|date('d/m/Y') }}</td>
    <td class="page-line-name">{{ page.status.name }}</td>
	<td class="page-line-actions" align="center">
		<div class="btn-group" role="group" aria-label="...">
			<a type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
			<a type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
			<a type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
			<a type="button" class="btn btn-default"><span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span></a>
		</div>
	</td>
</tr>

{% if page.children is not empty %}
	{% for page in page.children %}
		{% include 'OdysseusAdminBundle:Page:_page_line.html.twig' with {'page' : page, 'indent' : (indent+1)} only %}
	{% endfor %}
{% endif %}
