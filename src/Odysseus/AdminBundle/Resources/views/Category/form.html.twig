{% extends 'OdysseusAdminBundle::column2.layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">{{ block('form_title') }}</h1>
        </div>
    </div>
    <div class="row flashbags">
        <div class="col-xs-12">
            <div>
                {% for message in app.session.flashBag.get('odysseus_admin_category_form') %}
                    <div>{{ message }}</div>    
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            {{ form_start(form, {'method' : 'POST'}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                <label for="category_name">Nom du nouvel article :</label>
                {{ 
                    form_widget(form.name, {
                        'attr' : {
                            'class' : 'form-control',
                            'placeholder' : 'Nom de la cat√©gorie'
                        },
                        'id' : 'category_name'
                    })
                }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group">
                <center>
                    <button class="btn btn-default" type="submit">{{ block('form_submit') }}</button>
                </center>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

