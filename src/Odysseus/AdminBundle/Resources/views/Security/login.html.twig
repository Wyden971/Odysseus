{% extends "OdysseusAdminBundle::layout.html.twig" %}


{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

        <div class="container">
            <div class="row" style="margin:0px">
                <div class="col-md-6 col-sm-offset-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-lock"></span> Connexion</div>
                        <div class="panel-body">
                            <form class="form-horizontal" role="form" action="{{ path("fos_user_security_admin_check") }}" method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                <div class="form-group">
                                    <label for="inputUsername" class="col-sm-3 control-label">Login</label>
                                    <div class="col-sm-9 text-center">
                                        <input type="text" class="form-control" id="inputUsername" name="_username" placeholder="Login" value="{{ last_username }}" required="required">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword" class="col-sm-3 control-label">Mot de passe</label>
                                    <div class="col-sm-9 text-center">
                                        <input type="password" class="form-control" id="inputPassword" name="_password" placeholder="Mot de passe" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-4 col-sm-offset-3">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="_remember_me"/> Se souvenir de moi
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group last">
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-success btn-lg btn-block">Se connecter</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="panel-footer">
                            Mot de passe perdu ? <a href="#">Cliquez-ici</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
{% endblock body %}
